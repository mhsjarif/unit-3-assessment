<%- include("./_partials/header")%>
<h1>All Posts</h1>
    <table class="table table-hover">
            <thead>
              <tr>
                <th scope="col">#(id)</th>
                <th scope="col">Title</th>
                <th scope="col">Post</th>
              </tr>
            </thead>
            <tbody>
            <% posts.forEach(function(post, index) { %>
              <tr>
                <th scope="row"><%= post.id %></th>
                <td><%= post.title %></td>
                <td><%= post.body %></td>
              </tr>
            <% }); %>
            </tbody>
          </table>
</body>
</html>
<%- include("./_partials/footer")%>